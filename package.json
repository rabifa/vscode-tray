{
  "name": "vscode-tray",
  "version": "1.0.0",
  "main": "main.js",
  "keywords": [],
  "author": "Raphael Faria",
  "license": "MIT",
  "description": "VS Code Project Launcher para System Tray",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "clean": "rimraf -rf dist",
    "clean-cache": "(if exist \"%localappdata%\\electron-builder\\cache\" rmdir /s /q \"%localappdata%\\electron-builder\\cache\")",
    "prebuild-win": "taskkill /im \"VS Code Tray.exe\" /f /t 2>nul || exit 0",
    "clean:win": "(if exist dist rmdir /s /q dist)",
    "build-win": "npm run clean-cache && npm run prebuild-win && npm run clean:win && electron-builder --win",
    "build-linux": "npm run clean && electron-builder --linux",
    "build-all": "electron-builder --win --linux",
    "dist": "npm run build-all"
  },
  "build": {
    "appId": "com.vscode.tray",
    "productName": "VS Code Tray",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "main.js",
      "assets/**/*"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icon.ico",
      "requestedExecutionLevel": "asInvoker",
      "forceCodeSigning": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": false,
      "createStartMenuShortcut": true,
      "shortcutName": "VS Code Tray Launcher",
      "runAfterFinish": true,
      "allowElevation": false
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "rpm",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icon.png",
      "category": "Development",
      "desktop": {
        "entry": {
          "Name": "VS Code Tray Launcher",
          "Comment": "Launch VS Code projects from system tray",
          "Categories": "Development;IDE;",
          "StartupNotify": "false"
        }
      }
    }
  },
  "devDependencies": {
    "electron": "^37.2.4",
    "electron-builder": "^26.0.12",
    "rimraf": "^5.0.7"
  },
  "dependencies": {
    "canvas": "^3.1.2"
  }
}
